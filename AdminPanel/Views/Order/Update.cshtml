@model Order
@{
    ViewData["Title"] = "Изменение статуса заказа";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<form asp-action="Update" asp-controller="Order" method="post">
    <input type="hidden" asp-for="Address" value="@Model.Address">
    <input type="hidden" asp-for="Number" value="@Model.Number">
    <input type="hidden" asp-for="Delivery" value="@Model.Delivery">
    <input type="hidden" asp-for="Date" value="@Model.Date">
   @* //<input type="hidden" asp-for="Basket" value="@Model.Basket">*@
    <input type="hidden" asp-for="CartNum" value="@Model.CartNum">
    <input type="hidden" asp-for="TotalSum" value="@Model.TotalSum">
    
    <div class="form-group">
    <label>Выберите опцию</label>
    <select asp-for="Status" class="form-select">
        <option selected>Выберите опцию</option>
        <option value="20">Не доставлен</option>
        <option value="10">Доставлен</option>
        <option value="30">Отменён</option>
    </select>
    </div>
    <button class="btn btn-primary">Изменить</button>
</form>
