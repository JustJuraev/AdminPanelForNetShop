@model ProductAddress
@{
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

<form asp-action="Add" asp-controller="ProductAddress" method="post">
    <div class="form-group">
        <label>Выберите товар: </label>
        <select asp-for="ProductId" class="form-select">
            <option selected>Выберите опцию</option>
            @foreach (var item in ViewBag.Products)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
  <div class="form-group">
        <label>Выберите товар: </label>
        <select id="category" class="form-select" name="list[]">
            
            @foreach (var item in ViewBag.Region)
            {
                <option value="@item.Id">@item.RegionName</option>
              
            }
        </select>
    </div>
    <button class="btn btn-primary">Добавить</button>
</form>

