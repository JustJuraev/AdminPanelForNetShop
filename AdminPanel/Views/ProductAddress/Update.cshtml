@model List<ProductAddress>
@{
    var list = Model;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">


<form asp-action="Update" asp-controller="ProductAddress" method="post">
   

    @for (int i = 0; i < list.Count; i++)
    {
        <input type="hidden" asp-for="@list[i].Id" value="@list[i].Id">
        <input type="hidden" asp-for="@list[i].ProductId" value="@list[i].ProductId">
      
      
        <h2>Регион</h2>
        <select asp-for="@list[i].RegionId" class="form-select">
        <option selected>@list[i].RegionId</option>
        @foreach (var item2 in ViewBag.AllReg)
        {
            <option value="@item2.Id">@item2.RegionName</option>
        }
        </select>
       
    }

    <div class="ppknoka">
        <button class="btn btn-primary">Изменить</button>
    </div>
</form>