@model Product
@{
    ViewData["Title"] = "Добавление продукта";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<form enctype="multipart/form-data" asp-action="Add" asp-controller="Product" method="post">
    <div class="form-group">
        <label asp-for="Name">Введите имя для продукта</label>
        <input type="text" asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Price">Введите цену продукта</label>
        <input type="text" asp-for="Price" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="ShortDesc">Введите короткое описание для продукта</label>
        <input type="text" asp-for="ShortDesc" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="LongDesc">Введите описание для продукта</label>
        <input type="text" asp-for="LongDesc" class="form-control">
    </div>
    <div class="form-group">
        <label>Выберите опцию</label>
        <select class="form-select" asp-for="CategoryId">
            <option selected>Выберите опцию</option>
            @foreach (var item in @ViewBag.Categories)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CoverPhoto">Выберите фото</label>
        <div class="custom-file">
           <input asp-for="CoverPhoto" class="custom-file-input">
           <label class="custom-file-label">Выберите файл</label>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Count">Введите количество продукта</label>
        <input type="text" asp-for="Count" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(".custom-file-input").on("change", function ()
        {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}

        